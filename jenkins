
pipeline {
    agent any
    environment {
        dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
    }
    stages {
        stage('Checkout Stage') {
            steps {
                checkout scm
            }
        }
        stage('Build Stage') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Back up') {
            steps {
                parameters([
                    string(name: 'curdate', value: "${(new Date()).format("dd MMM,YYYY HH mm")}")
                ])
               fileOperations([
                   folderRenameOperation(source : 'publish', destination : curdate),
                   folderDeleteOperation(folderPath : 'publish')
             ])
            }
        }
        
        stage("Release Stage") {
            steps {
                bat 'dotnet publish --output .\\publish'
            }
        }
    }
   post {
    success {
        echo 'build finished'
    }
   }
}

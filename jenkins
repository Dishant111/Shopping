import java.text.SimpleDateFormat

def dateDefaultValue = (new Date()).format("dd MMM,YYYY HH mm", TimeZone.getTimeZone(\'UTC\'))

pipeline {
    agent any
    environment {
        dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
    }
parameters {
  string defaultValue: "${dateDefaultValue}", description: 'this is current data', name: 'currentdata'
}
    stages {
        stage('Checkout Stage') {
            steps {
                checkout scm
            }
        }
        stage('Build Stage') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Back up') {
            steps {
               fileOperations([
                   folderRenameOperation(source : 'publish', destination : currentdata),
                   folderDeleteOperation(folderPath : 'publish')
             ])
            }
        }
        
        stage("Release Stage") {
            steps {
                bat 'dotnet publish --output .\\publish'
            }
        }
    }
   post {
    success {
        echo 'build finished'
    }
   }
}

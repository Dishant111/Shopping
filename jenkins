pipeline {
    agent any
    environment {
        dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
    }
    stages {
        stage('Checkout Stage') {
            steps {
                checkout scm
            }
        }
        stage('Build Stage') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Back up') {
            steps {
                bat 'xcopy  .\\publish .\\backup' 
            }
        }
        
        stage("Release Stage") {
            steps {
                bat 'dotnet publish --output .\\publish'
            }
        }
    }
   post {
    success {
        echo 'build finished'
    }
   }
}

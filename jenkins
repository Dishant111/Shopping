
pipeline {
    agent any
    environment {
        dotnet = 'C:\\Program Files\\dotnet\\dotnet.exe'
        curdate = (new Date()).format("dd MMM,YYYY HH mm")
    }
    stages {
        stage('Checkout Stage') {
            steps {
                checkout scm
            }
        }
        stage('Build Stage') {
            steps {
                bat 'dotnet restore'
            }
        }
        stage('Back up') {
            steps {
               fileOperations([
                   folderRenameOperation(source : 'publish', destination : "${curdate}"),
                   folderDeleteOperation(folderPath : 'publish'),
                   fileDeleteOperation(includes : 'publish\\appsettings.json'),
                   fileCopyOperation(includes : "${curdate}" + "\\appsettings.json", targetLocation : 'publish')
             ])
            }
        }
        
        stage("Release Stage") {
            steps {
                bat 'dotnet publish --output .\\publish'
            }
        }
    }
   post {
    success {
        echo 'build finished'
    }
   }
}
